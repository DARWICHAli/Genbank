package src.GUI;
import java.awt.GridLayout;
import java.awt.Image;
import static src.GUI.Utils.*;
import javax.swing.*;

public class ControlsPanel extends JPanel {
	
	private JButton start;
	private JButton stop;
	private JButton reset;
	
	public ControlsPanel(){
		setBackground(darkGrey);
		initLayout();
		createComponents();
		addComponents();
	}
	
	private void initLayout() {
		setLayout(new GridLayout());
	}
	
	private void createComponents() {
		ImageIcon icon = new ImageIcon("/home/sihartist/Desktop/Genbank/project/images/start.png");
		Image scaled = icon.getImage();
		Image newimg = scaled.getScaledInstance(40, 40,  java.awt.Image.SCALE_SMOOTH);
		icon = new ImageIcon(newimg);
		start = new JButton(icon);
		start.setBackground(darkGrey);
		stop = new JButton("s");
		stop.setBackground(darkGrey);
		reset = new JButton("r");
		reset.setBackground(darkGrey);
//		start.setBorder(null);
//		stop.setBorder(null);
//		reset.setBorder(null);

	}
	
	private void addComponents() {
		add(start); add(stop); add(reset);
	}
	
}
